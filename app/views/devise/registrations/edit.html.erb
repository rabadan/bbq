<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default buffer-both">
      <div class="panel-heading">
        <h2 class="panel_title">
          <strong><%= t('.title', resource: resource_class.model_name.human) %></strong>
        </h2>
      </div>
      <div class="panel-body">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.input :email %>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p><%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></p>
          <% end %>
          <%= f.input :password, hint: t('.leave_blank_if_you_don_t_want_to_change_it') %>
          <%= f.input :password_confirmation %>
          <%= f.input :current_password, hint: t('.we_need_your_current_password_to_confirm_your_changes') %>

          <div class="actions">
            <%= f.submit t('.update'), class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
      <div class="panel-footer">
        <%= link_to t('devise.shared.links.back'), :back %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <h3><%= t('.cancel_my_account') %></h3>
    <p><%= t('.unhappy') %> <%= link_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete %>.</p>
  </div>
</div>



